<Window x:Class="Calculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <DockPanel>
        <Menu DockPanel.Dock="Top" prism:RegionManager.RegionName="Menu-Region">
            <MenuItem Header="_File">
                <MenuItem Header="_Simple" Command="{Binding ShowSimpleCalculatorCommand}"/>
                <MenuItem Header="Scienti_fic" Command="{Binding ShowScientificCalculatorCommand}"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" prism:RegionManager.RegionName="Status-Region">
            <TextBlock Text="typing..."/>
        </StatusBar>
        <ContentControl prism:RegionManager.RegionName="Main-Region"/>
    </DockPanel>
</Window>
